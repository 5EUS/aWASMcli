    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug aWASMcli",
            "program": "${workspaceFolder}/target/debug/aWASMcli",
            "args": ["allowed-hosts", "--plugin", "mangadex_plugin"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "RUST_LOG": "info,wasmtime_wasi_http=trace,wasmtime_wasi=info,awasmlib=debug",
                // "RUST_BACKTRACE": "1"
            }
        }
    ]
}